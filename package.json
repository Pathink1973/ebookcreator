{
  "name": "ebook-creator-app",
  "version": "1.2.0",
  "description": "An application to create and manage ebooks",
  "author": {
    "name": "Patricio Brito"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "electron-is-dev": "^3.0.1",
    "express": "^4.21.1",
    "html-to-text": "^9.0.5",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "puppeteer": "^21.11.0",
    "wait-on": "^8.0.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.ebookcreator.app",
    "productName": "Ebook Creator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "target": [
        "dir"
      ],
      "icon": "build/ebookcreator.icns"
    }
  }
}
